# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=forms_user
DB_PASSWORD=your_secure_password
DB_NAME=legal_forms

# Flask Configuration
FLASK_SECRET_KEY=your_random_secret_key_here
FLASK_DEBUG=False
FLASK_PORT=5000

# Semantic Similarity (Optional)
# Set to 'true' to enable semantic similarity matching (requires sentence-transformers)
# Set to 'false' to use only fuzzy matching (lighter dependencies)
ENABLE_SEMANTICS=false

# Model path for sentence-transformers (if enabled)
SEMANTIC_MODEL=all-MiniLM-L6-v2

# CourtListener API Configuration
COURTLISTENER_API_KEY=your_courtlistener_api_key_here
COURTLISTENER_USER_AGENT=LegalFormsExtractor/1.0 (your-email@example.com)

# Case Crawler Settings
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=5
CRAWLER_REQUEST_TIMEOUT=30

# Texas Court Scraper Settings (Future)
TEXAS_SCRAPER_ENABLED=false
TEXAS_SCRAPER_DELAY=2

# Field Similarity Thresholds
FUZZY_THRESHOLD=85
SEMANTIC_THRESHOLD=0.85

# Logging
LOG_LEVEL=INFO
LOG_FILE=legal_forms.log
