# Copy this file to .env and adjust values
# MySQL Database Configuration
DB_HOST=localhost
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=legal_forms

# Directory containing legal form templates (HTML, DOCX, TXT, PDF)
FORMS_DIR=./

# Feature toggles
# Enable semantic embeddings for deduplication (requires sentence-transformers and torch)
ENABLE_SEMANTICS=True

# Accept non-italic placeholders in DOCX files (default: False - only accept italicized)
ACCEPT_NON_ITALIC_DOCX=False

# Accept brace placeholders in TXT files (default: True)
ACCEPT_BRACES_TXT=True

# Accept brace placeholders in PDF files (default: True)
ACCEPT_BRACES_PDF=True

# PDF strict mode - if True, only extract text with exact positioning (default: False)
PDF_STRICT_MODE=False

# Fuzzy matching threshold for field deduplication (0-100)
FUZZY_THRESHOLD=85

# Semantic similarity threshold for field deduplication (0.0-1.0)
SEMANTIC_THRESHOLD=0.85
